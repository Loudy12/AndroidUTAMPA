<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />

    <application
        android:name=".UtampaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/utlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/utlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Utampa"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBEGgMFDviF1c3i1GE75uI5t47nLH9b5LU"/>

        <!-- Declare MainActivity as your launcher activity -->
        <activity
            android:name=".ui.theme.pages.SignInActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Utampa"
            android:launchMode="singleTask">
            <!-- Intent filter for launching the app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Intent filter for handling the redirect URI -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="myapp"
                    android:host="callback" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.theme.pages.MapsActivity"
            android:theme="@style/Theme.Utampa">
        </activity>
        <activity android:name=".ui.theme.pages.MainActivity" />
        <activity android:name=".ui.theme.pages.GuestActivity"/>

    </application>
</manifest>
